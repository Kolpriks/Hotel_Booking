<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="369dp"
        android:layout_height="279dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/framecard" />

    <TextView
        android:id="@+id/textViewGuests"
        android:layout_width="152dp"
        android:layout_height="32dp"

        android:layout_marginEnd="13dp"
        android:layout_marginBottom="129dp"
        android:text="Гости:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="87dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonUnBook"
        style="@style/CustomButtonStyle2"
        android:layout_width="156dp"
        android:layout_height="69dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="44dp"
        android:text="Отменить"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="154dp"
        android:layout_height="71dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="8dp"
        android:text="Город:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewGuests"
        app:layout_constraintEnd_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewIn"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="44dp"
        android:text="Заезд: "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textViewOut"
        android:layout_width="152dp"
        android:layout_height="29dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="84dp"
        android:text="Выезд: "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>